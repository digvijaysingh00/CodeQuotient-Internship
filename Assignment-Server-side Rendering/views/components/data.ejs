<style>
  <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            border-collapse: collapse;
            width: 80%;
            margin: 20px auto;
            border: 2px solid #000;
            padding: 8px;
        }

        th,
        td {
            border: 1px solid #000;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .center-row {
            text-align: center;
        }
    </style>

<table>
  <tr class="center-row">
      <th colspan="3"><h1>User Data</h1></th>
  </tr>
  <tr>
      <th>Serial No</th>
      <th>Name</th>
      <th>Username</th>
  </tr>
  <% let serialNo = 1; %>
        <% for (const username in users) { %>
            <% const user = users[username]; %>
            <tr>
                <td><%= serialNo++ %></td>
                <td><%= user.firstName %> <%= user.lastName %></td>
                <td><%= user.username %></td>
            </tr>
        <% } %>
  
  <!-- Add more rows for additional user data -->
</table>